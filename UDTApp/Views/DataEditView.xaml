<UserControl x:Class="UDTApp.Views.DataEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             xmlns:vm="clr-namespace:UDTApp.ViewModels"
             xmlns:cltLib="clr-namespace:UDTAppControlLibrary.Behaviour;assembly=UDTAppControlLibrary"
             d:DesignHeight="500" d:DesignWidth="500">

    <UserControl.Resources>

        <DataTemplate DataType="{x:Type vm:UDTDataButton}">
            <Button Command="{Binding ButtonClickCommand}" Content="{Binding buttonName}" Width="Auto" Height="20"></Button>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:UDTDataGrid}">
            <GroupBox Header="{Binding childDef.Name}" BorderThickness="1" BorderBrush="DarkBlue">
                <StackPanel>
                    <DataGrid ItemsSource="{Binding gridData}" IsReadOnly="True" 
                    cltLib:AutoGeneratingColumnEventToCommandBehaviour.Command="{Binding CreateColumnsCommand}"/>
                </StackPanel>
            </GroupBox>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:UDTDataTextBox}">
            <WrapPanel>
                <Label Content="{Binding colName}" Width="auto" Height="25" HorizontalContentAlignment="Right"></Label>
                <TextBox Text="{Binding editText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="100" Height="25"></TextBox>
            </WrapPanel>
        </DataTemplate>
        
    </UserControl.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding WindowLoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Column="0" Grid.Row="0">
            <ContentControl HorizontalAlignment="Left" Width="auto" Content="{Binding returnBtn}"/>
            <GroupBox Header="{Binding DataViewName}" BorderThickness="1" BorderBrush="DarkBlue">
                <DataGrid ItemsSource="{Binding gridData}" CanUserAddRows="False"
                          SelectedItem="{Binding SelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          SelectedIndex="{Binding SelectedIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          cltLib:AutoGeneratingColumnEventToCommandBehaviour.Command="{Binding CreateColumnsCommand}"/>
             </GroupBox>
            <GroupBox Header ="Seleted Item:" BorderThickness="1" BorderBrush="DarkBlue">
                <ListBox ItemsSource="{Binding editBoxes}" HorizontalContentAlignment="Left">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </GroupBox>
            <WrapPanel>
                <Button Content="Add Row" Command="{Binding AddRowCommand}" />
                <Button Content="Delete Row" Command="{Binding DeleteRowCommand}" />
                <Button Content="Save DataSet" Command="{Binding UpdateDatasetCommand}" />
            </WrapPanel>
        </StackPanel>
        <Label Content="Child Data" Grid.Column="1" Grid.Row="0" Margin="20,0,0,0" Width="100"/>
        <Border Grid.Column="1" Grid.Row="0" BorderBrush="Transparent" BorderThickness="8">
        <Expander HorizontalContentAlignment="Left" Grid.Column="1" Grid.Row="0" ExpandDirection="Right" 
                  BorderBrush="Black" BorderThickness="2" Margin="0,20,20,20">
            <StackPanel Height="auto">
                <ListBox ItemsSource="{Binding childTables}" HorizontalContentAlignment="Center" />
                <ListBox ItemsSource="{Binding childGrids}" HorizontalContentAlignment="Left" />
            </StackPanel>
        </Expander>
        </Border>

    </Grid>
</UserControl>
